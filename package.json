{
  "name": "docker-ts-nest",
  "version": "0.6.0",
  "license": "MIT",
  "engines": {
    "node": "^16.16.0 || >=18.0.0",
    "yarn": ">=1.22.19"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --cache --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/server.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && yarn build",
    "start:prod": "cross-env-shell NODE_ENV=prod pm2 start ecosystem.config.js",
    "lint": "eslint '{src,test}/**/*.ts' --fix",
    "test": "vitest run",
    "test:watch": "vitest run --watch",
    "test:cov": "vitest run --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "check:all": "yarn lint && yarn format && yarn test:cov",
    "doc": "npx compodoc --theme material -p ./tsconfig.json",
    "doc:serve": "npx compodoc -s",
    "commitmsg": "commitlint -e",
    "release": "standard-version --no-verify"
  },
  "dependencies": {
    "@nest-middlewares/cors": "^6.0.1",
    "@nest-middlewares/helmet": "^6.0.0",
    "@nest-middlewares/response-time": "^6.0.0",
    "@nestjs/axios": "0.1.0",
    "@nestjs/bull": "~0.6.1",
    "@nestjs/common": "~9.0.11",
    "@nestjs/core": "~9.0.11",
    "@nestjs/microservices": "~9.0.11",
    "@nestjs/platform-express": "~9.0.11",
    "@nestjs/swagger": "~6.1.1",
    "@nestjs/testing": "~9.0.11",
    "@nestjs/websockets": "~9.0.11",
    "axios": "0.27.2",
    "bull": "^4.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "helmet": "3.23.3",
    "nest-router": "^1.0.9",
    "nest-winston": "^1.7.0",
    "reflect-metadata": "^0.1.13",
    "response-time": "^2.3.2",
    "rxjs": "~7.5.5",
    "supertest": "^6.1.6",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.8.1",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.18.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-angular": "^17.1.0",
    "@compodoc/compodoc": "^1.1.19",
    "@types/bull": "^3.15.9",
    "@types/lodash": "^4.14.184",
    "@types/node": "^18.6.2",
    "@typescript-eslint/eslint-plugin": "~5.36.1",
    "@typescript-eslint/parser": "~5.36.1",
    "@vitest/coverage-c8": "^0.23.0",
    "c8": "^7.12.0",
    "cross-env": "^7.0.3",
    "eslint": "~8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-radar": "^0.2.1",
    "husky": "^8.0.1",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "prettier": "~2.7.1",
    "prettier-plugin-import-sort": "^0.0.7",
    "redis-mock": "^0.56.3",
    "standard-version": "^9.5.0",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "~4.8.2",
    "vite-plugin-checker": "^0.5.1",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.23.0"
  },
  "importSort": {
    ".ts": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "setupFilesAfterEnv": "./jest.setup.redis-mock.js",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
